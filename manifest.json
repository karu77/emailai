{
  "manifest_version": 3,
  "name": "Email AI Assistant",
  "version": "1.0.0",
  "description": "Adds a 'Summarize Email' button to Gmail interface",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://mail.google.com/*"
  ],
          "content_scripts": [
          {
            "matches": ["https://mail.google.com/*"],
            "js": ["api-config.js", "content.js"],
            "css": ["styles.css"],
            "run_at": "document_end"
          }
        ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Email AI Assistant"
  }
} 